.pick-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.3;
    overflow: hidden;
    z-index: 10;
    color: #fff;
}
.pick-box {
    position: absolute;
    width: 94%;
    border: 2rpx solid #d4d4d4;
    border-radius: 6rpx;
    background: #fff;
    top: 30%;
    left: 0;
    right: 0;
    margin: auto;
    z-index: 100;
}

.pick-toggle {
    display: flex;
    justify-content: center;
}

.pick-toggle .pick-rl {
    display: block;
    width: 280rpx;
    font-size: 32rpxm;
    text-align: center;
    color: #c91723;
    border: 2rpx solid #c91723;
    padding: 10rpx 0;
}

.pick-toggle .pick-rl.selected {
    background-color: #c91723;
    color: #fff;
}

.pick-toggle .pick-rl.gl {
    border-bottom-left-radius: 8rpx;
    border-top-left-radius: 8rpx;
}

.pick-toggle .pick-rl.nl {
    border-bottom-right-radius: 8rpx;
    border-top-right-radius: 8rpx;
}

.pick-content {
    display: flex;
    justify-content: flex-start;
    width: 96%;
    margin: 0 auto;
}

.pick-content {
    height: 240rpx;
}

.pick-content picker-view {
    width: 100%;
}

.pick-content picker-view picker-view-column {
    line-height: 60rpx;
    color: #222;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
}

.pick-content .mid-check {
    color: red;
    background: rgba(212, 212, 212, 0.2);
    border-top: 1px solid #d4d4d4;
    border-bottom: 1px solid #d4d4d4;
}

.pick-btn {
    display: flex;
    width: 100%;
}

.pick-btn view {
    width: 50%;
    color: #000;
    font-size: 28rpx;
    text-align: center;
    border-top: 1rpx solid #d4d4d4;
    padding: 16rpx 0;
}

.pick-btn .pick-left {
    border-right: 1rpx solid #d4d4d4;
}

.pick-result {
    display: block;
    width: 100%;
    line-height: 80rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #363837;
    text-align: center;
    border-bottom: 1rpx solid #d4d4d4;
    margin-bottom: 20rpx;
}
